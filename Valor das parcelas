programa
{
	
	funcao inicio()
	{
		real valor_total
		inteiro forma_pagamento
		inteiro contador = 1
		inteiro parcelas
		real valor_parcelado

		escreva("Informe o valor total da compra: ")
		leia(valor_total)

		escreva("\nInforme o número de parcelas (Entre 1x a 12x): ")
		leia(parcelas)

		valor_parcelado = valor_total / parcelas

		escreva("\nO valor da sua compra foi de R$" + valor_total + "\n")
		escreva("Você vai pagar em " + parcelas + "x de valor " + valor_parcelado + "\n\n")

		enquanto( contador <= parcelas)
		{
			escreva("Mês " + contador + " - R$ " + valor_parcelado + "\n")
			contador = contador + 1
		}
	}
}
