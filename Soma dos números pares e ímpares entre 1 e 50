programa
{
	
	funcao inicio()
	{
		inteiro contador = 1
		inteiro soma = 0

		enquanto(contador <= 50)
		{
			soma = soma + contador
			
			se(contador % 2 == 0)
			{
				contador = contador + 2
			}
			senao
			{
				contador = contador + 1
			}
		}
		escreva(soma)
	}
}
/*O código tem duas variáveis: contador e soma;
 * A variável contador é declarada com valor 1; 
 * O código deve percorrer até o número 50;
 * O código deve checar cada número para saber se ele é par ou ímpar;
 * Se for par, incrementa + 2 ao contador;
 * Se for ímpar, incrementa + 1 ao contador;
 */
