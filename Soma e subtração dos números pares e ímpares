programa
{
	
	funcao inicio()
	{
		inteiro numero
		inteiro resultado = 0

		escreva("Digite um n√∫mero: ")
		leia(numero)

		para(inteiro contador = 1; contador <= numero; contador++)
		{
			se(contador % 2 == 0)
			{
				resultado = resultado + contador
			}
			senao
			{
				resultado = resultado - contador
			}
		}
		escreva("\nResultado: " + resultado)
	}
}
