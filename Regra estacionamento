programa
{
	
	funcao inicio()
	{
		inteiro dias = 12

		escreva("Regra para vaga fixa no estacionamento: ")
		

		se(dias <= 15)
		{
			escreva("Você deve estar a mais de 15 dias na empresa para ter uma vaga fixa")
		}
		senao 
		{
			escreva("Você já pode ter uma vaga fixa no estacionamento!")
		}
	}
}
