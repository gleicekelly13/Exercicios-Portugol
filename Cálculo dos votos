programa
{
	
	funcao inicio()
	{
		inteiro contador = 1
		inteiro voto
		inteiro  representante_A = 0
		inteiro representante_B = 0

		enquanto(contador <= 47)
		{
			escreva("\nEscolha seu voto\n\n")

			escreva("1) Representante A\n")
			escreva("2) Representante B\n")
			leia(voto)

			escolha(voto)
			{
				caso 1:
				representante_A = representante_A + 1
				pare
				caso 2:
				representante_B = representante_B + 1
				pare
			}

			contador++
		}
		escreva("\nVotos do representante A: " + representante_A + "\n")
		escreva("\nVotos do representante B: " + representante_B + "\n\n1")

		se(representante_A > representante_B)
		{
			escreva("O candidato A venceu por " + representante_A + " votos.\n")		
		}
		senao
		{
			escreva("O candidato B venceu por " + representante_B + " votos.\n")
		}
	}
}
